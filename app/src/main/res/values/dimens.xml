    <dimen name="text_xlarge">20sp</dimen>
    <dimen name="text_xxlarge">22sp</dimen>
    <dimen name="text_xxxlarge">24sp</dimen>

    <!-- radius -->
    <dimen name="radius_small">@dimen/space_small</dimen>
    <dimen name="radius_medium">@dimen/space_medium</dimen>
    <dimen name="radius_xmedium">@dimen/space_xmedium</dimen>
