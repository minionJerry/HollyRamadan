<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Title.Second">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Description">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="Description.Time">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="CalendarText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/gray_2</item>
    </style>

    <style name="BoldText">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/avenir_black</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
    </style>

</resources>
